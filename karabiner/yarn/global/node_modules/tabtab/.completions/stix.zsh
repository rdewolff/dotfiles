###-begin-stix-completion-###
if type compdef &>/dev/null; then
  _stix_completion () {
    local reply
    local si=$IFS

    IFS=$'\n' reply=($(COMP_CWORD="$((CURRENT-1))" COMP_LINE="$BUFFER" COMP_POINT="$CURSOR" stix completion -- "${words[@]}"))
    IFS=$si

    _describe 'values' reply
  }
  compdef _stix_completion stix
fi
###-end-stix-completion-###
